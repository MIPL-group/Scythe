//http://stackoverflow.com/questions/21162812/select-rows-with-same-id-but-different-value-in-another-column

#input

|ARIDNR|LIEFNR|
|-------------|
|'1     |A     |
|'2     |A     |
|'3     |A     |
|'1     |B     |
|'2     |B     |

#output

|ARIDNR|LIEFNR|
|-------------|
|'1     |A     |
|'1     |B     |
|'2     |A     |
|'2     |B     |

#constraint
{
	"constants": [],
	"aggregation_functions": ["count"]
}

#solution

SELECT *
FROM YourTable
WHERE ARIDNR IN (
    SELECT ARIDNR
    FROM YourTable
    GROUP BY ARIDNR
    HAVING COUNT(*) > 1);

Select t2.ARIDNR,t2.LIEFNR
 From
  (Select input1.ARIDNR, input1.LIEFNR, input1.ARIDNR As ARIDNR1, input1.LIEFNR As LIEFNR1
  From (input1 Join
      input1)) As t2
 Where t2.LIEFNR <> t2.LIEFNR1
   And t2.ARIDNR = t2.ARIDNR1;