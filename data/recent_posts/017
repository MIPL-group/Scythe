#input

emp_id, emp_sal, emp_grp
1     ,     5  ,     HMCCR
1     ,    10  ,     HMCPR
1     ,    20  ,     HMCPR
1     ,    30  ,     HMCPR
1     ,    40  ,     HMCRR
2     ,    40  ,     HMCRR
2     ,    50  ,     HMCCR

#output

emp_id, emp_sal, emp_grp
1     ,    10  ,     HMCPR
2     ,    40  ,     HMCRR

#constraint
{
	"constants": ["HMCPR"],
	"aggregation_functions": ["min"]
}